<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.MainActivity"
    android:background="@drawable/profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints">

        <ImageView
            android:id="@+id/button15"
            android:layout_width="80dp"
            android:layout_height="67dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_trx"
            android:onClick="clicktrx"
            tools:ignore="MissingConstraints,OnClick"
            tools:layout_editor_absoluteX="12dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/button16"
            android:layout_width="80dp"
            android:layout_height="67dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_deposit"
            android:onClick="clickdeposit"
            tools:ignore="MissingConstraints,OnClick"
            tools:layout_editor_absoluteX="98dp"
            tools:layout_editor_absoluteY="3dp" />

        <ImageView
            android:id="@+id/button17"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_profilpth"
            tools:ignore="MissingConstraints,OnClick"
            tools:layout_editor_absoluteX="175dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/button18"
            android:layout_width="70dp"
            android:layout_height="67dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_history"
            android:onClick="clickhistory"
            tools:ignore="MissingConstraints,OnClick"
            tools:layout_editor_absoluteX="250dp"
            tools:layout_editor_absoluteY="0dp" />

        <ImageView
            android:id="@+id/button19"
            android:layout_width="75dp"
            android:layout_height="68dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/btn_notice"
            android:onClick="clicknotice"
            tools:ignore="MissingConstraints,OnClick"
            tools:layout_editor_absoluteX="331dp"
            tools:layout_editor_absoluteY="3dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>